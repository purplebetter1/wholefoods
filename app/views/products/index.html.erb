<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title/Description</th>
      <th>Price</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @products.each do |product| %>
  <tr>
    <td><%= image_tag "products/#{product.image_url}" %></td>
    <td><span class="product_title"><%= product.title %></span>
    <%= product.description %><br><%= link_to "View Product", product_path(product) %></td>
    <td><%= print_price(product.price) %></td>
    </tr>
    
<% end %>
  </tbody>
</table>

<br>

<p><%= link_to "Create a New Product", new_product_path, id: "new_product" %></p>
